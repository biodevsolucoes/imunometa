@page "{slug}"
@model BFBlog.Pages.PostModel
@{
}
<div class="row">
    <div class="col-12 col-xl-8">
        <div class="post">
            <img src="/files/@Model.Post.ImagemCapaUrl" class="w-100" />
            <h1>@Model.Post.Titulo</h1>
            @*<h5 class="text-muted">@Model.Post.Resumo</h5>*@

            <a href="#" class="fa fa-facebook">
                <i class="fa fa-facebook"></i>
            </a>
            <a href="#" class="fa fa-twitter"><i class="fa fa-twitter"></i></a>
            <div class="py-3 text-justify lead">
                @Html.Raw(Model.Post.Texto)
            </div>
        </div>
    </div>
    <div class="col-12 col-xl-4">
        <div class="border w-100 p-3 rounded">
            <h5 class="fw-bolder">
                Pesquisar
            </h5>

        </div>
    </div>
</div>

@section Scripts{
}
<style type="text/css">
    /* Style all font awesome icons */
    a.fa {
        padding: 20px;
        font-size: 30px;
        width: 50px;
        text-align: center;
        text-decoration: none;
    }

        /* Add a hover effect if you want */
        a.fa:hover {
            opacity: 0.7;
        }

    /* Set a specific color for each brand */

    /* Facebook */
    a.fa-facebook {
        background: #3B5998;
        color: white;
    }

    /* Twitter */
    a.fa-twitter {
        background: #55ACEE;
        color: white;
    }
</style>