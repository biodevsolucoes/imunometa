@page
@model BFBlog.Areas.Admin.Pages.Categorias.DeleteModel

@{
    ViewData["Title"] = "Categorias";
    ViewData["Subtitle"] = "Excluir";
}


<h3>Deseja excluir essa categoria?</h3>
@section DivAcao{
    <a asp-area="Admin" class="btn btn-outline-secondary" asp-page="/Categorias/Index"><i class="fa fa-arrow-left"></i> Voltar</a>
}
<div class="p-5 bg-light">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria.DataCadastro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria.DataCadastro)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria.Removido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria.Removido)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Categoria.Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> 
        <a asp-page="./Index">Cancelar</a>
    </form>
</div>
